{
  "expo": {
    "name": "Kairos",
    "slug": "kairos-app",
    "version": "1.0.0",
    "scheme": "kairos",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.kairos.mobile",
      "associatedDomains": ["applinks:kairos.app"],
      "infoPlist": {
        "NSFaceIDUsageDescription": "Usamos Face ID para un inicio de sesion mas rapido y seguro",
        "NSCalendarsUsageDescription": "Necesitamos acceso al calendario para guardar eventos",
        "NSCalendarsFullAccessUsageDescription": "Necesitamos acceso al calendario para guardar eventos",
        "NSCalendarsWriteOnlyAccessUsageDescription": "Necesitamos acceso al calendario para guardar eventos"
      }
    },
    "android": {
      "package": "app.kairos.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "READ_CALENDAR",
        "WRITE_CALENDAR"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "kairos.app",
              "pathPrefix": "/novedades"
            },
            {
              "scheme": "https",
              "host": "kairos.app",
              "pathPrefix": "/eventos"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-community/datetimepicker"
    ]
  }
}
